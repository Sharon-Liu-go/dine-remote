<div class="container p-3">
  <a href="./" class="d-flex justify-content-end">Go back</a>
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class=" form-row">
      <div class="form-group col-md-6">
        <label for="inputEmail4">Name</label>
        <input type="text" class="form-control" id="inputEmail4" name="name" value="{{restaurant.name}}">
      </div>
      <div class="form-group col-md-6">
        <label for="inputPassword4">English Name</label>
        <input type="text" class="form-control" id="inputPassword4" name="name_en" value="{{restaurant.name_en}}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="" name="location"
        value="{{restaurant.location}}">
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="inputCity">Phone</label>
        <input type="text" class="form-control" id="inputCity" name="phone" value="{{restaurant.phone}}">
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">Category</label>
        <select id="inputState" class="form-control" name="category" value="{{restaurant.category}}">
          <option value="中東料理">中東料理</option>
          <option value="地中海料理">地中海料理</option>
          <option value="日本料理">日本料理</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="中式餐廳">中式餐廳</option>
          <option value="美式">美式</option>
          <option value="酒吧">酒吧</option>
          <option value="咖啡">咖啡</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <div class="form-group col-md-2">
        <label for="rating">Rating</label>
        <input type="number" id="rating" step="0.1" min="1" max="5" class="form-control" name="rating"
          value="{{restaurant.rating}}">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Google map</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="URL" name="google_map"
        value="{{restaurant.google_map}}">
    </div>
    <div class="form-group">
      <label for="inputAddress">Picture</label>
      <input type="text" class="form-control" id="inputAddress" placeholder="URL" name="image"
        value="{{restaurant.image}}">
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Description</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3">{{restaurant.description}}"</textarea>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>